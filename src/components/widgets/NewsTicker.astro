---
export interface NewsItem {
  text: string;
  href?: string;
}

export interface Props {
  items: NewsItem[];
  classes?: string;
}

const { items, classes = '' } = Astro.props;
---

<div class={`relative bg-yellow-100 text-yellow-800 py-2 px-4 text-center shadow-md ${classes}`}>
  <marquee behavior="scroll" direction="left">
    {items.map((item, index) => (
      <span class="inline-block mx-4" key={index}>
        {item.href ? (
          <a href={item.href} class="underline hover:text-yellow-600">{item.text}</a>
        ) : (
          <span>{item.text}</span>
        )}
      </span>
    ))}
  </marquee>
</div>
